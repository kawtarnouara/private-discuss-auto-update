{
  "name": "discuss-flows",
  "description": "Private Discuss, La solution de communication privee, dediee, sur mesure et chiffree",
  "version": "7.5.30",
  "main": "./main.js",
  "author": "PRIVATE DISCUSS <contact@piman-group.fr>",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder --publish never --mac",
    "deploy": "electron-builder --publish always",
    "dist:linux": "electron-builder --linux"
  },
  "dependencies": {
    "@electron/remote": "^2.0.1",
    "@nut-tree-fork/nut-js": "^4.2.1",
    "electron-context-menu": "^0.9.1",
    "electron-dl": "^1.12.0",
    "electron-progressbar": "^1.1.0",
    "electron-updater": "^4.3.5",
    "fs": "0.0.1-security",
    "i18next": "^19.7.0",
    "i18next-node-fs-backend": "^2.1.3",
    "image-data-uri": "^2.0.0",
    "offline-js": "^0.7.19",
    "v8-compile-cache": "^2.3.0",
    "xmlhttprequest": "^1.8.0"
  },
  "devDependencies": {
    "@electron/notarize": "^2.3.2",
    "electron": "^34.1.1",
    "electron-builder": "^23.0.2",
    "electron-installer-dmg": "^3.0.0",
    "electron-packager": "^17.1.1",
    "electron-winstaller": "^4.0.0"
  },
  "build": {
    "appId": "com.discuss.flows",
    "mac": {
      "target": [
        "mas"
      ],
      "icon": "build/icon.icns",
      "category": "public.app-category.productivity",
      "hardenedRuntime": true,
      "entitlements": "build/entitlements.mas.plist",
      "entitlementsInherit": "build/entitlements.mas.helper.plist",
      "entitlementsLoginHelper": "build/entitlements.mas.helper.plist",
      "provisioningProfile": "build/embedded.provisionprofile",
      "extendInfo": {
        "NSMicrophoneUsageDescription": "Please allow access to your microphone for voice calls",
        "NSCameraUsageDescription": "Please allow access to your camera for video calls"
      },
      "helperBundleId": "com.discuss.flows.loginhelper",
      "asarUnpack": [
        "**/*.node",
        "**/node_modules/nut-js/**/*",
        "**/node_modules/@nut-tree/**/*"
      ]
    },
    "linux": {
      "icon": "build/icons/Icon-512x512.png",
      "category": "productivity",
      "target": [
        "AppImage"
      ]
    },
    "win": {
      "target": "msi"
    },
    "directories": {
      "output": "app",
      "buildResources": "build"
    },
    "productName": "Flows Discuss",
    "protocols": [
      {
        "name": "Flows Discuss",
        "schemes": [
          "discuss-flows"
        ]
      }
    ]
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/kawtarnouara/private-discuss-auto-update.git"
  }
}
